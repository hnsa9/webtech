<div class="row">
  	<div class="col-sm-12">   
          <h2>List of Movie</h2>

     	<div class="table-responsive">
			<table class="table table-striped table-hover table-bordered" id="tblmovies">
			  	<thead class="thead-dark">
			    	<tr>
				      <th>#</th>
				      <th>Movie Title</th>
				      <th>Genre</th>
					  <th>Showtimes</th>
				      <th>Operation</th>
			    	</tr>
			  	</thead>
			  	<tbody>
				   {{#each movielist}}
				      <tr>
					      <td class='index-column'></td>

					      <td>
					      	<a href="#movies/view/{{movie_id}}" style="text-decoration: none">
					      		{{ movie_title }}
					      	</a>
					      </td>

					      <td>
					      		{{{ displaygenre genre }}}
					      </td>						 


						 <td>
					      	 {{ showtimes }}
					      </td>						  


					      
					      <td>
					      	<a href='#movies/view/{{movie_id}}'> <i class="ri-eye-line"></i> </a>
				      		&nbsp;

				  
					      </td>
				      </tr>
				   {{/each}}
			  	<tbody>
			</table>
		</div>
  	</div>
</div>

