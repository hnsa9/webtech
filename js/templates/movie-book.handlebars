<div class="row">
   <div class="col-sm-6">   
      <h2>Book Movie<h2/> 

		<form class="form-horizontal" id="formbook">
		  <fieldset>

			  <input type="hidden" id="movie_id" value="{{movie_id}}">

		    <div class="form-group">
		      <label for="movie_title" class="col-lg-3 control-label">Movie Title</label>
		      <div class="col-lg-9">
		        <input type="text" class="form-control" id="movie_title" value="{{movie_title}}" readonly>	
		      </div>
		    </div>

		    <div class="form-group">
		      <label for="genre" class="col-lg-3 control-label">Genre</label>
		      <div class="col-lg-9">
		        <input type="text" class="form-control" id="genre" value="{{genre}}" readonly>	
		      </div>				  
		    </div>			
			
			 <div class="form-group">
		      <label for="showtimes" class="col-lg-3 control-label">Showtime</label>
		      <div class="col-lg-9">
		        <input type="text" class="form-control" id="showtimes" value="{{showtimes}}" readonly>	
		      </div>				  
		    </div>			

			  <div class="form-group">
		      <label for="ticket" class="col-lg-3 control-label">No. of Ticket</label>
		      <div class="col-lg-9">
		       <input type="number" class="form-control" id="ticket" min="1" max="10" required>
		      </div>
		    </div>
			
			

		    <div class="form-group">
		      <div class="col-lg-9 col-lg-offset-3">	      	
		        <button type="reset" class="btn btn-default" id="formbookcancel">Cancel</button>
		        <button type="submit" class="btn btn-primary">Submit</button>
		      </div>
		    </div>
		  </fieldset>
		</form>     
   </div>
</div>