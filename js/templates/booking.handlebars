<div class="row">
  	<div class="col-sm-12">   
          <h2>List of Booking</h2>
     	<p>
     		<a href="#movies" class="btn btn-info" id="bookmovie">
     			<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Book Movies
     		</a>
     	</p>

     	<div class="table-responsive">
			<table class="table table-striped table-hover table-bordered" id="tblbooking">
			  	<thead class="thead-dark">
			    	<tr>
				      <th>#</th>
				      <th>Movie Title</th>
					  <th>Ticket</th>
					  <th>Booking Date</th>
				      <th>Status</th>
				
			    	</tr>
			  	</thead>
			  	<tbody>
				   {{#each bookinglist}}
				      <tr>
					      <td class='index-column'></td>

					      <td>
					      		 <a href="#booking/view/{{booking_id}}" style="text-decoration: none">
					      		{{ movie_title }}
					      </td>

					    

						  
						  <td>
					      		{{ ticket }}
					      </td>
						  
						  <td>
					      		{{ bookdate }}
					      </td>

					      <td>
					      		{{{ displaybookingstatus status }}}
					      	</a>
					      </td>
						  
					     
				      </tr>
				   {{/each}}
			  	<tbody>
			</table>
		</div>
  	</div>
</div>
